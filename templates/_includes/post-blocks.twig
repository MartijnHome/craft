<div class="my-8">
  {% for block in blocks %}
    <div class="my-4">
      {% if block.type == 'text' %}
        <div class="copy">
          {{ block.text|retcon([
            ['attr', 'h1', { class: 'text-3xl mb-4' }],
            ['attr', 'ol', { class: 'list-decimal list-inside ml-4 mb-4' }]
          ]) }}
        </div>
      {% elseif block.type == 'image' %}
        {% for image in block.image.all() %}
          <img src="{{ image.url }}" alt="{{ image.title }}"/>
        {% endfor %}
      {% endif %}
    </div>
  {% endfor %}
</div>
